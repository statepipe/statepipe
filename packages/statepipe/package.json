{
  "private": true,
  "name": "@statepipe/statepipe",
  "version": "0.1.0",
  "description": "statepipe source code",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "prettier": "npx prettier -u --check --loglevel=warn src/**",
    "prettier:fix": "npx prettier --loglevel=debug --write src/**",
    "eslint:fix": "eslint src/** --fix",
    "lint:fix": "npm run prettier:fix && npm run eslint:fix",
    "eslint": "eslint src/**",
    "lint": "npm run eslint && npm run prettier",
    "jest": "node --experimental-vm-modules node_modules/.bin/jest src/core",
    "jest:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch src/core",
    "pretest": "npm run lint",
    "test": "npm run jest",
    "prebuild":"npm run prettier:fix",
    "build": "echo build"
  },
  "jest": {
    "verbose": true,
    "bail": true,
    "testMatch": ["**/__test__/*.js"]
  },
  "author": "igor almeida",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.8",
    "eslint": "^7.16.0",
    "eslint-config-defaults": "^9.0.0",
    "jest": "^26.6.3",
    "prettier": "2.2.1"
  }
}
