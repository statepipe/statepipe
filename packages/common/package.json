{
  "private": true,
  "name": "@statepipe/common",
  "version": "0.1.0",
  "description": "statepipe common scripts",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "prettier": "npx prettier -u --check --loglevel=warn src/",
    "prettier:fix": "npx prettier --loglevel=warn --write src/",
    "eslint": "eslint src/*.js",
    "lint": "npm run eslint && npm run prettier",
    "jest": "node --experimental-vm-modules node_modules/.bin/jest",
    "jest:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "pretest": "npm run lint",
    "test": "npm run jest"
  },
  "jest": {
    "verbose": true,
    "bail": true,
    "testMatch": ["**/__test__/*.js"]
  },
  "author": "igor almeida",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.8",
    "eslint": "^7.16.0",
    "eslint-config-defaults": "^9.0.0",
    "jest": "^26.6.3",
    "prettier": "2.2.1"
  }
}
